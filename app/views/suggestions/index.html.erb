<p id="notice"><%= notice %></p>
<%if @suggestions.empty? %>
  <p>There are no suggestions.</p>
<%end%>
<h1>Listing Suggestions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Name</th>
      <th>Authors</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggestions.each do |suggestion| %>
      <tr>
        <td><%= suggestion.isbn %></td>
        <td><%= suggestion.name %></td>
        <td><%= suggestion.authors %></td>
        <td><%= suggestion.description %></td>
        <td><%= link_to 'Show', suggestion %></td>
        <td><%= link_to 'Edit', edit_suggestion_path(suggestion) %></td>
        <td><%= link_to 'Destroy', suggestion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Approve', approve_path(suggestion.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

