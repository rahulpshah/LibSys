<p id="notice"><%= notice %></p>
<%if @admins.empty? %>
  <p>There are no other admins.</p>
<%end%>
<h1>Listing Admins</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <td><%= link_to 'Show', admin ,class: "btn-sm btn-primary"%></td>
        <%if admin.editable?%> 
          <td><%= link_to 'Edit', edit_admin_path(admin) ,class: "btn-sm btn-warning"%></td>
          <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn-sm btn-danger"%></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin', new_admin_path %>
